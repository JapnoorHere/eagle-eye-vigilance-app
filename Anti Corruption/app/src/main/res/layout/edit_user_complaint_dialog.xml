<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:orientation="vertical"
        android:paddingEnd="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comDate"
            android:text="123456"
            android:drawableStart="@drawable/ic_baseline_date_range_241"
            android:textColor="@color/black"
            />
        <EditText
            android:inputType="text"
            android:id="@+id/compSumm"
            android:background="@drawable/edit_text"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:hint="Complaint Summary"
            android:maxLines="1"
            />
        <EditText
            android:inputType="text"
            android:id="@+id/compAgainst"
            android:background="@drawable/edit_text"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:hint="Complaint Against"
            android:maxLines="1"
            />

        <EditText
            android:inputType="text"
            android:maxLines="1"
            android:id="@+id/comDetails"
            android:background="@drawable/edit_text"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:hint="Complaint Details"
            />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/edittext2"
            app:boxBackgroundColor="#e6e6e6"
            android:layout_marginTop="10dp"
            >

            <AutoCompleteTextView
                android:id="@+id/District"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Select District"
                android:inputType="none"/>
        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:background="@drawable/upload_photo"
            android:drawableStart="@drawable/ic_baseline_play_circle_24"
            android:id="@+id/audio"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="  Audio"
            android:textColor="@color/white"
            />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_marginTop="20dp"
                android:backgroundTint="#4169e1"
                android:id="@+id/audioUpload"
                android:src="@drawable/ic_baseline_file_upload_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/upload_photo"
            android:id="@+id/video"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="15dp"
            android:text="  Video"
            android:drawableLeft="@drawable/ic_baseline_play_circle_24"
            android:textColor="@color/white"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_marginTop="20dp"
                android:backgroundTint="#4169e1"
                android:src="@drawable/ic_baseline_file_upload_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/videoUpload"
                android:layout_weight="0"
                />
        </LinearLayout>

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|right"
    >
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/accepted"
        android:src="@drawable/ic_baseline_delete_24"
        android:layout_marginBottom="16dp"
        android:id="@+id/fabAdd2"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/accepted"
        android:src="@drawable/ic_baseline_file_download_done_24"
        android:layout_marginBottom="16dp"
        android:id="@+id/fabAdd1"
        />
</LinearLayout>
</LinearLayout>
</layout>