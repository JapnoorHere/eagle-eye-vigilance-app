<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
<androidx.cardview.widget.CardView
    android:layout_width="350dp"
    android:layout_margin="20dp"
    app:cardCornerRadius="10dp"
    android:layout_gravity="center"
    android:layout_height="180dp">

        <androidx.viewpager2.widget.ViewPager2
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="180dp"
            android:id="@+id/viewpager"
            android:layout_margin="20dp"

            />
</androidx.cardview.widget.CardView>

        <FrameLayout
            android:layout_width="match_parent"
            android:background="@drawable/movingtextbg"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
        >
        <TextView
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/movText"
            android:text="@string/want_to_get_tips_or_knowledge_about_corruption_ntap_here"
            />
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardComplaints"
            android:layout_weight="1"
            android:layout_width="170dp"
             android:layout_height="180dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            app:cardBackgroundColor="#F3F3F3"
            app:cardCornerRadius="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="My Complaints"
                android:textColor="@color/blue"
                android:textSize="23sp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardDemand"
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="#F3F3F3"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="My Demand Letters"
                android:textColor="@color/blue"
                android:textSize="23sp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>

        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:background="@drawable/movingtextresolvedbg"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We have Successfully Resolved n cases"
            android:layout_margin="10dp"
            android:gravity="center"
            android:id="@+id/success"
            android:textStyle="bold"
            android:drawableStart="@drawable/goal"
            android:textColor="@color/white"
            />

        </FrameLayout>
    </LinearLayout>

</layout>