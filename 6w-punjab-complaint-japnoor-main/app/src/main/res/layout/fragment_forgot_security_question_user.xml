<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".FavouriteQuestionActivity">

        <TextView
            android:id="@+id/tvSetUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Verify your Answer which you entered while creating your account"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic" />


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:visibility="gone"
            android:id="@+id/Question2"
            app:boxBackgroundColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp">

            <AutoCompleteTextView
                android:id="@+id/Question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:drawableStart="@drawable/ic_baseline_question_answer_24"
                android:inputType="none"
                android:text="What is your hobby ? " />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/Question"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_question_answer_24"
            android:inputType="none"
            android:text="  What is your hobby ? " />


        <EditText
            android:inputType="text"
            android:maxLines="1"
            android:background="@drawable/edit_text"
            android:id="@+id/etAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/black"
            android:hint="Answer..."
            android:textSize="20sp"
            android:padding="20dp"
            />

        <EditText
            android:maxLines="1"
            android:background="@drawable/edit_text"
            android:id="@+id/etAnswer1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/black"
            android:hint="Answer..."
            android:textSize="20sp"
            android:padding="20dp"
            />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_margin="40dp"
            android:layout_marginEnd="40dp"
            android:text="NEXT" />
        <Button
            android:visibility="gone"
            android:id="@+id/btnSave1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_margin="40dp"
            android:layout_marginEnd="40dp"
            android:text="NEXT" />



    </LinearLayout>
</layout>